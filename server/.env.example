# Server Configuration
PORT=5000

# Database Configuration
# Local MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/auth-dashboard

# Production MongoDB Atlas URI (example - replace with your actual credentials)
# MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/auth-dashboard?retryWrites=true&w=majority

# JWT Secrets
# IMPORTANT: Generate strong, random secrets for production
# Use crypto.randomBytes(32).toString('hex') in Node.js or an online generator
# Minimum 32 characters recommended
JWT_ACCESS_SECRET=your_super_secret_access_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production

# JWT Expiration Times
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Environment Mode
NODE_ENV=development

# Client URL (for CORS configuration)
CLIENT_URL=http://localhost:3000
